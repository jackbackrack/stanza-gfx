var PLATFORM =
  on-platform :
    linux : "LINUX"
    os-x : "MACOSX"

package gfx/gl defined-in "gfx-gl.stanza"
package gfx/gl requires :
  ccflags :
    on-platform :
      os-x  : ["-framework" "OpenGL"]
      linux : "-lGL"
package gfx/glu defined-in "gfx-glu.stanza"
package gfx/glu requires :
  ccfiles :
    "{WORKDIR}/build/tess.o"
  ccflags :
    on-platform :
      os-x  : (["-framework" "OpenGL"] "-lc++")
      linux : ("-lGL" "-lstdc++")
compile file "{WORKDIR}/build/tess.o" from "tess.cpp" :
  "g++ -std=c++11 -D{PLATFORM} -DGL_SILENCE_DEPRECATION -c {.}/tess.cpp -o {WORKDIR}/build/tess.o"
package gfx/glfw defined-in "gfx-glfw.stanza"
package gfx/glfw requires :
  ccflags :
    on-platform :
      os-x  : ("-lglfw3" ["-framework" "Carbon"] ["-framework" "Cocoa"] ["-framework" "OpenGL"] ["-framework" "IOKit"] ["-framework" "CoreVideo"])
      linux : ("-lglfw" "-lrt" "-lm" "-lXrandr" "-lXinerama" "-lXi" "-lXcursor" "-lXrender" "-lGL" "-lGLU" "-lpthread" "-ldl" "-ldrm" "-lXdamage" "-lXfixes" "-lX11-xcb" "-lxcb-glx" "-lxcb-dri2" "-lxcb-dri3" "-lxcb-present" "-lxcb-randr" "-lxcb-xfixes" "-lxcb-render" "-lxcb-shape" "-lxcb-sync" "-lxshmfence" "-lXxf86vm" "-lXext" "-lX11" "-lxcb" "-lXau" "-lXdmcp")
package gfx/font defined-in "gfx-font.stanza"
package gfx/drawing defined-in "gfx-drawing.stanza"
